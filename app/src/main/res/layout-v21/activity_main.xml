<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/pomodoroTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/app_name"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/pomodoro"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        />

    <Button
        android:id="@+id/pomodoro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:backgroundTint="@android:color/darker_gray"
        android:gravity="center"
        android:insetTop="1dp"
        android:insetBottom="1dp"
        android:text="@string/pomodoro"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/pomodoroTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/shortBreak"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        />

    <Button
        android:id="@+id/shortBreak"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/darker_gray"
        android:gravity="center"
        android:insetTop="1dp"
        android:insetBottom="1dp"
        android:text="@string/shortBreak"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/pomodoro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/longBreak"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        />

    <Button
        android:id="@+id/longBreak"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/darker_gray"
        android:gravity="center"
        android:insetTop="1dp"
        android:insetBottom="1dp"
        android:text="@string/longBreak"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/shortBreak"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/standardTime"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"/>

    <TextView
        android:id="@+id/standardTime"
        style="@style/Theme.AppCompat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/standardTime"
        android:textSize="96sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/longBreak"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/start"
        />

    <Button
        android:id="@+id/start"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/greenMarked"
        android:gravity="center"
        android:insetTop="1dp"
        android:insetBottom="1dp"
        android:text="@string/start"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/standardTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"/>

    <Button
        android:id="@+id/stop"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/standard_red"
        android:gravity="center"
        android:insetTop="1dp"
        android:insetBottom="1dp"
        android:text="@string/stop"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:strokeColor="@color/darkest_red"
        app:layout_constraintTop_toBottomOf="@+id/start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/reset"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"/>

    <Button
        android:id="@+id/reset"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/darker_gray"
        android:gravity="center"
        android:insetTop="1dp"
        android:insetBottom="1dp"
        android:text="@string/reset"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/stop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"/>

    <ImageButton
        android:id="@+id/settingsButton"
        style="@style/Theme.AppCompat"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        app:srcCompat="@drawable/ic_baseline_settings_24"
        app:layout_constraintTop_toBottomOf="@+id/reset"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/settings_button"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
